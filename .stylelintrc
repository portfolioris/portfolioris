{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "ignoreFiles": [],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "each"
        ]
      }
    ],
    "max-empty-lines": 3,
    "declaration-empty-line-before": "never",
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "inside-block"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ]
  }
}
